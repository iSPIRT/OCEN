{
	"$schema": "http://json-schema.org/draft-07/schema#", 
	"$id": "https://github.com/iSPIRT/lsp-lender-protocol-specification/blob/master/Grant%20Loan/schema/Version%200.0.1/Grant%20Loan/GrantLoanResponse.json",
	"type": "object",
	"required": [
		"metadata",
		"response",
		"requestId",
		"loanId",
		"terms",
		"disbursement",
		"repayment",
		"loanStatus"
	],
	"properties": {
		"metadata": {
			"$ref": "https://github.com/iSPIRT/lsp-lender-protocol-specification/blob/master/Core/schema/Version%200.0.1/metadata.json"
		}
,
		"response": { 
			"$ref": "https://github.com/iSPIRT/lsp-lender-protocol-specification/blob/master/Core/schema/Version%200.0.1/response.json"
		}
,
		"requestId": { 
			"type": "string",
			"examples": [
				"e8cc6822bd4bbb4eb1b9e1b4996fbff8acb"
			]
		},
		"loanId": { 
			"type": "string",
			"examples": [
				"e8cc6822bd4bbb4eb1b9e1b4996fbff8acb"
			]
		},
		"terms": {
			"$ref": "https://github.com/iSPIRT/lsp-lender-protocol-specification/blob/master/Core/schema/Version%200.0.1/loanterms.json"
		}
,
		"disbursement": {
			"$ref": "https://github.com/iSPIRT/lsp-lender-protocol-specification/blob/master/Core/schema/Version%200.0.1/chosenDisbursement.json"
		}
,
		"repayment": {
			"$ref": "https://github.com/iSPIRT/lsp-lender-protocol-specification/blob/master/Core/schema/Version%200.0.1/chosenRepayment.json"
		}
,
		"loanStatus": { 
			"type": "string",
			"enum": [
				"GRANTED","REJECTED","DEFAULTED","COMPLETED","ACTION_REQUIRED"
			]
		},
		"rejectionDetails":{
			"type":"array",
			"items": {
				"$ref": "https://github.com/iSPIRT/lsp-lender-protocol-specification/blob/master/Core/schema/Version%200.0.1/rejectiondetail.json"
			}
		},
		"actionRequired":{
			"type":"array",
			"items": {
			"$ref": "https://github.com/iSPIRT/lsp-lender-protocol-specification/blob/master/Core/schema/Version%200.0.1/actionrequired.json"
		}
	}
	}
}
