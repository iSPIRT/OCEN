{
	"$schema": "http://json-schema.org/draft-07/schema#", 
	"$id": "https://github.com/iSPIRT/lsp-lender-protocol-specification/blob/master/Core/schema/Version%200.0.1/loanterms.json",  
	"type": "object",
	"required": [
		"requestedAmount",
		"currency"
	],
	"properties": {
		"requestedAmount": { 
			"type": "string",
			"examples": [
				"50000.00"
			]
		},
		"currency": {
			"type": "string",
			"examples": [
				"INR"
			]
		},
		"sanctionedAmount": {
			"type": "string",
			"examples": [
				"5000.00"
			]
		},
		"interestType": {
			"type": "string",
			"enum": [
				"FIXED","FLOATING"
			]
		},
		"interestRate": {
			"type": "string",
			"examples": [
				"6.50"
			]
		},
		"totalAmount":{
			"type":"string"
		},
		"interestAmount":{
			"type":"string"
		},
		"description":{
			"type":"string"
		},
		"tenure": { 
			"$ref": "https://github.com/iSPIRT/lsp-lender-protocol-specification/blob/master/Core/schema/Version%200.0.1/loantenure.json"
		}
,
		"legalAgreement": {
			"$ref": "https://github.com/iSPIRT/lsp-lender-protocol-specification/blob/master/Core/schema/Version%200.0.1/loanAgreement.json"
		}
,
		"documents": { 
			"type": "array",
            "items": {
                "$ref": "https://github.com/iSPIRT/lsp-lender-protocol-specification/blob/master/Core/schema/Version%200.0.1/document.json"
            }
		},
		"charges": {
			"$ref": "https://github.com/iSPIRT/lsp-lender-protocol-specification/blob/master/Core/schema/Version%200.0.1/charges.json"
		},
		"url":{
			"type":"string"
		},
		"extensibleData":{
			"$ref": "https://github.com/iSPIRT/lsp-lender-protocol-specification/blob/master/Core/schema/Version%200.0.1/extensibleData.json"
		}

	}
}
