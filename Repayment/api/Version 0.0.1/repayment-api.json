{
    "openapi":"3.2.0",
    "info":{
        "title":" Repayment API",
        "description":"API to consume for Repayment set and trigger repayment",
        "version":"3.2"
    },
    "paths":{
        "/v3/repayment/getRepaymentPlansRequest":{
            "post":{
                "description":"Invoked by LSP to get list of repayment plans",
                "requestBody":{
                    "description":"Request to lender to get repayment plans ",
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"https://github.com/iSPIRT/lsp-lender-protocol-specification/blob/master/Repayment/schema/Version%200.0.1/Get%20Repayment%20Plans/GetRepaymentPlansRequest.json"
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"Acknowledgement of Request Received",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"https://github.com/iSPIRT/lsp-lender-protocol-specification/blob/master/Core/schema/Version%200.0.1/ack.json"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/v3/repayment/getRepaymentPlansResponse":{
            "post":{
                "description":"Invoked by lender to return repayment Plans",
                "requestBody":{
                    "description":"Returns array of repayment Plans",
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"https://github.com/iSPIRT/lsp-lender-protocol-specification/blob/master/Repayment/schema/Version%200.0.1/Get%20Repayment%20Plans/GetRepaymentPlansResponse.json"
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"Acknowledgement of Response Received",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"https://github.com/iSPIRT/lsp-lender-protocol-specification/blob/master/Core/schema/Version%200.0.1/ack.json"
                                }
                            }
                        }
                    }
                }                
            }
        },
        "/v3/repayment/setRepaymentPlanRequest":{
            "post":{
                "description":"Invoked by LSP requesting lender to set repayment plan",
                "requestBody":{
                    "description":"Set Choosen Repayment Plan in lender's system",
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"https://github.com/iSPIRT/lsp-lender-protocol-specification/blob/master/Repayment/schema/Version%200.0.1/Set%20Repayment%20Plan/SetRepayementPlanRequest.json"
                            }
                        }
