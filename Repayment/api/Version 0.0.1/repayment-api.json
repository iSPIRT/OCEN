                        "responses":{
                            "200":{
                                "description":"Acknowledgement to Request Received",
                                "content":{
                                    "application/json":{
                                        "schema":{
                                            "$ref":"https://github.com/iSPIRT/lsp-lender-protocol-specification/blob/master/Core/schema/Version%200.0.1/ack.json"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "/v3/repayment/triggerRepaymentResponse":{
                    "post":{
                        "description":"Invoked by Lender to send lender's payment page url",
                        "requestBody":{
