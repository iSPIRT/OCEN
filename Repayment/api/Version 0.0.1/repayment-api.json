                    }
                } 
            }
        },
        "/v3/repayment/setRepaymentPlanStatusResponse":{
            "post":{
                "description":"Invoked by Lender to inform status of set Repayment plan",
                "requestBody":{
                    "description":"Set Repayment Plan status response",
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"https://github.com/iSPIRT/lsp-lender-protocol-specification/blob/master/Repayment/schema/Version%200.0.1/Set%20Repayment%20Plan%20Status/SetRepaymentPlanStatusResponse.json"
