                    "post":{
                        "description":"Invoked by Lender to Confirm repayment ",
                        "requestBody":{
                            "description":"Request to lender to Confirm Repayment",
                            "content":{
                                "application/json":{
                                    "schema":{
                                        "$ref":"https://github.com/iSPIRT/lsp-lender-protocol-specification/blob/master/Repayment/schema/Version%200.0.1/Confirm%20Repayment/ConfirmRepaymentRequest.json"
                                    }
                                }
                            }
                        },
                        "responses":{
                            "200":{
                                "description":"Acknowledgement to Response Received",
                                "content":{
                                    "application/json":{
