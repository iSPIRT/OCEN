                },
                "responses":{
                    "200":{
                        "description":"Acknowledgement of Request Received",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"https://github.com/iSPIRT/lsp-lender-protocol-specification/blob/master/Core/schema/Version%200.0.1/ack.json"
                                }
                            }
                        }
                    }
                }  
            }
        },
        "/v3/repayment/setRepaymentPlanResponse":{
            "post":{
                "description":"Invoked by lender to inform lsp about chosenRepayment status",
                "requestBody":{
                    "description":"Set Repayment plan Status information to LSP",
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"https://github.com/iSPIRT/lsp-lender-protocol-specification/blob/master/Repayment/schema/Version%200.0.1/Set%20Repayment%20Plan/SetRepaymentPlanResponse.json"
