                },
                "responses":{
                    "200":{
                        "description":"Acknowledgement of Response Received",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"https://github.com/iSPIRT/lsp-lender-protocol-specification/blob/master/Core/schema/Version%200.0.1/ack.json"
                                }
                            }
                        }
                    }
                } 
            }
        },
        "/v3/repayment/setRepaymentPlanStatusRequest":{
            "post":{
                "description":"Invoked by LSP to fetch status of set repayment plan ",
                "requestBody":{
                    "description":"Get status of set repayment plan",
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"https://github.com/iSPIRT/lsp-lender-protocol-specification/blob/master/Repayment/schema/Version%200.0.1/Set%20Repayment%20Plan%20Status/SetRepayementPlanStatusRequest.json"
                            }
